{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}

<section class="position-absolute w-100">
    {{ component('Navbar') }}
    </section>
    <section class="hero d-flex align-items-center" id="hero" style="padding-top:90px; height: auto; min-height: 100vh;">
        <div class="container">
            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                </div>
            {% endif %}
            <div class="row align-items-center">
            <div class="col-lg-6 d-flex flex-column justify-content-center" style="display: flex;align-items: center; padding: 30px;">
                <h1 data-aos="fade-up" class="aos-init aos-animate">Inscription</h1>
                <h2 data-aos="fade-up" data-aos-delay="400" class="aos-init aos-animate">ou</h2>
                <div data-aos="fade-up" data-aos-delay="600" class="aos-init aos-animate">
                <div class="text-center text-lg-start">
                    <a href="/register" class="btn-get-started scrollto d-inline-flex align-items-center justify-content-center align-self-center">
                    <span>Se connecter</span>
                    <img alt="arrow" src="/assets/images/arrow.png" height="30px" class="arrow">
                    </a>
                </div>
                </div>
            </div>
            
                
    
                <div class="col-lg-6 contact">
                    <div class="php-email-form" name="registration_form" style="height: auto; background-color: #ffffff08; padding: 30px; ">
                        {{ form_start(registrationForm) }}
                            <div class="row gy-4 counts" style="padding:10px; ">
        
                                <div class="col-md-6">
                                    <input value="" type="text" class="form-control" id="registration_form_nom" name="{{ field_name(registrationForm.nom) }}" maxlength="255" placeholder="Family-Name" autocomplete="family-name" required="">
                                </div>
                                
                                <div class="col-md-6">
                                    <input value="" type="text" class="form-control" id="registration_form_prenom" name="{{ field_name(registrationForm.prenom) }}" maxlength="255" placeholder="Name" autocomplete="given-name" required="">
                                </div>
                                
                                <div class="col-md-12">
                                    <input value="" type="email" class="form-control" id="registration_form_email" name="{{ field_name(registrationForm.email) }}" placeholder="E-mail" autocomplete="email" maxlength="180" required="required">
                                </div>
                                
                                <div class="col-md-6">
                                    <input value="" type="password" id="registration_form_plainPassword" name="{{ field_name(registrationForm.plainPassword) }}" autocomplete="new-password" class="form-control" placeholder="Password" required="required">
                                </div>
                                
                                <div class="col-md-6">
                                    <div class="form-check d-flex align-items-center">
                                        <input class="form-check-input" type="checkbox" value="" id="registration_form_agreeTerms" name="{{ field_name(registrationForm.agreeTerms) }}" checked="" required="required" style="height: 28px; width: 28px; margin-right: 10px; ">
                                        <label class="form-check-label" for="flexCheckChecked">
                                        Agree Terms
                                        </label>
                                    </div>
                                </div>
        

        
                                <div class="col-md-12 text-center">
                                    {% if form_errors(registrationForm) %}
                                    <div class="alert alert-danger">{{ form_errors(registrationForm) }}</div>
                                    {% endif %}
                                    <button class="btn btn-lg btn-primary" type="submit">S'inscrire</button>
                                </div>
        
                            </div>
                        {{ form_end(registrationForm) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}


