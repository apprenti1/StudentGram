<div class="form-box m-1 p-3 preview">
    <h3 class="text-center">
        {{ offre.titre }}
    </h3>
    <p class="text-center">
        {{ offre.refTypeContrat.label }}<br>
    </p>
    <p class="text-center inside-preview-section mt-2">
        {{ offre.description }}<br>
    </p>
    <p class="text-center inside-preview-section mt-2">
        5 r√©ponses
    </p>
    <div class="row flex-nowrap content-edit-icon-card">
        <a class="col-4 icon" href="{{ path('app_offer_show', {'id': offre.id}) }}">
            <img src="/assets/images/eye.png" alt="icon">
        </a>
        <a class="col-4 icon" href="{{ path('app_offer_edit', {'id': offre.id}) }}">
            <img src="/assets/images/edit.png" alt="icon">
        </a>
        <form class="col-4 icon" method="post" action="{{ path('app_offer_delete', {'id': offre.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ offre.id) }}">
            <button class="icon p-0 m-0 bg-transparent border-0" style="margin: 0 !important;">
                <img src="/assets/images/delete.png" alt="icon">
            </button>
        </form>
    </div>
</div>