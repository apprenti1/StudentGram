

    <section class="hero d-flex align-items-center flex-grow-1" id="hero" style="height: auto; min-height: 100%;">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-lg-6 d-flex flex-column justify-content-center" style="display: flex;align-items: center; padding: 30px;">
                    <h1 data-aos="fade-up" class="aos-init aos-animate">{{ type }} d'offre</h1>
                </div>
            
    
                <div class="col-lg-6 contact">
                    <div class="php-email-form" name="registration_form" style="height: auto; background-color: #ffffff08; padding: 30px; margin: 30px; ">
                        {{ form_start(form) }}
                            <div class="row gy-4 counts" style="padding:10px; ">

                                <div class="col-md-6">
                                    <input value="{{ form.titre.vars.value }}" type="text" class="form-control" name="{{ field_name(form.titre) }}" maxlength="255" placeholder="Titre" required="">
                                </div>
                                
                                <div class="col-md-6">
                                    <input value="{{ form.description.vars.value }}" type="text" class="form-control" name="{{ field_name(form.description) }}" maxlength="255" placeholder="Description" required="">
                                </div>

                                {{ dump(form) }}
                                {{ dump(type_contrats) }}
                                <div class="col-md-12">
                                    <select class="form-control" name="{{ field_name(form.ref_type_contrat) }}" maxlength="180" required="">
                                        <option value="" disabled selected hidden>Type de contrat</option>
                                        {% for type_contrat in type_contrats %}
                                            <option value="{{ type_contrat.id }}" {% if form.ref_type_contrat.vars.value == type_contrat.id %} selected {% endif %}>
                                                {{ type_contrat.label }}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </div>
                                
        

        
                                <div class="col-md-12 text-center">
                                    {% if form_errors(form) %}
                                    <div class="alert alert-danger">{{ form_errors(form) }}</div>
                                    {% endif %}
                                    <button class="btn btn-lg btn-primary" type="submit">{{ button_label }}</button>
                                </div>
        
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>


