{# templates/salle/assign.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Affecter une Salle à un Événement{% endblock %}

{% block body %}
    <h1>Affecter une Salle à un Événement</h1>
    <form method="post">
        {# Formulaire pour affecter une salle à un événement #}
        <div class="form-group">
            <label for="salle">Salle :</label>
            <select id="salle" name="salle" class="form-control">
                {% for salle in salles %}
                    <option value="{{ salle.id }}">{{ salle.nom }}</option>
                {% endfor %}
            </select>
        </div>
        <div class="form-group">
            <label for="evenement">Événement :</label>
            <select id="evenement" name="evenement" class="form-control">
                {% for evenement in evenements %}
                    <option value="{{ evenement.id }}">{{ evenement.nom }}</option>
                {% endfor %}
            </select>
        </div>
        <button type="submit" class="btn btn-primary">Affecter</button>
    </form>
    <a href="{{ path('app_salle_list') }}" class="btn btn-secondary">Retour à la liste des salles</a>
    </div>
{% endblock %}
